<div class="container" id="comedian-info-tabs">
  <% @comedians.each do |comedian|%>
  <div class="row" id="comedian">
    <div class="container">
        
      <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#info<%="#{comedian.id}"%>"> 
        <%= comedian.name %>
      </button>
        <div id="info<%="#{comedian.id}" %>" class="collapse">
        <div class="row">
          <div class="col">
          
            <span class="row text-center">
              <span id="comedian-age"><%= comedian.age %></span>
            </span>

            <span class="row text-center">
              <span id="comedian-city"><%= comedian.city %></span>
            </span>
          </div>
          
        </div>
      </div>

      <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#specials<%="#{comedian.id}"%>"> 
        Specials
      </button>
        <div id="specials<%="#{comedian.id}" %>" class="collapse">
            <% comedian.specials.each do |special|%>
            <div class="col text-center">
              <span id="comedian-specials">
                <a href= "<%= special.watch_now_url %>">
                  <img src="<%= special.image_url %>" alt="<%= special.name %>-img">
                </a>
              </span>
            <% end %>
          </div>
        </div>

        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
