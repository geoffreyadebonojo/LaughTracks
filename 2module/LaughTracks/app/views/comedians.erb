  <table class="table">

      

    <% @comedians.each do |comedian|%>
      <div class="row" id="comedian">
      <div class="container">
          
          <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#demo<%="#{comedian.id}"%>"> 
            <%= comedian.name %>
          </button>
          
          <div id="demo<%="#{comedian.id}" %>" class="collapse">
          
          <div class="row">

            <div class="container">

              <div class="col text-center">
                <span id="comedian-age"><%= comedian.age %></span>
              </div>
              <div class="col text-center">
                <span id="comedian-city"><%= comedian.city %></span>
              </div>

            </div>

            <!-- specials thumbm -->
            <div class="col text-center">
              <% comedian.specials.each do |special|%>
                <span id="comedian-specials">
                  <img src="<%= special.image_url %>" alt="<%= special.name %>-img">
                </span>
              <% end %>
            </div>
          </div>

          </div>
        <% end %>
        </div>
      </span>
    </div>
