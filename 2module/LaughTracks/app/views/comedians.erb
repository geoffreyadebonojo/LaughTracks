	<div class="container" id="statistics-box">
	  <div class="row">
		<div class="col text-center" id="statistics-header">
		  Statistics
		</div>
	  </div>
	  <div class="row" id="info">
		<div class="col text-center">
			<b>avg special runtime</b>
		</div>
		<div class="col text-center">
		  <b>total tv specials</b>
		</div>
		<div class="col text-center">
		  <b>average age</b>
		</div>
		<div class="col text-center">
		  <b>cities</b>
		</div>
	  </div>
	  
	  <div class="row" id="info">
      <div class="col text-center" id="average-length">
        <%= @average_length%>
      </div>

      <div class="col text-center"  id="total-specials">
        <%= @total_specials %>
      </div>

      <div class="col text-center"  id="average-age">
        <%= @average_age %>
      </div>

      <div class="col text-center">
        <div class="container" id="cities-list">
          <div class="row">
            <div class="col text-center">
            <% @cities_list.each do |city| %>
              <div class="row"><%= city %></div>
            <% end %>
            </div>
          </div>
        </div>
		  </div>
